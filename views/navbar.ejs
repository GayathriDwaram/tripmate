<link rel="stylesheet" href="/stylesheets/style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<nav class="navbar bg-body-tertiary shadow">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Trip Mate</a>
    <!-- if res.locals.user -->
    <% if (user) { %>
    <div class="d-flex  align-items-center">
      <!-- user: ride, shipment, history -->
      <!-- driver: ride, shipment, history -->
      <!-- admin: users, rides, shipments-->
      <!-- display user in JSOn.stringfy -->
      <% if (user?.role === 'user') { %>
      <a class="text-decoration-none text-dark me-2" href="/rides">Ride</a>
      <a class="text-decoration-none text-dark me-2" href="/shipments">Shipment</a>
      <a class="text-decoration-none text-dark me-2" href="/history">History</a>

      <% } else if (user?.role === 'driver') { %>
      <a class="text-decoration-none text-dark me-2" href="/rides">Ride</a>
      <a class="text-decoration-none text-dark me-2" href="/shipments">Shipment</a>
      <% } else if (user?.role === 'admin') { %>
      <a class="text-decoration-none text-dark me-2" href="/users">Users</a>
      <a class="text-decoration-none text-dark me-2" href="/rides">Rides</a>
      <a class="text-decoration-none text-dark me-2" href="/shipments">Shipments</a>
      <% } %>
      <a class="text-decoration-none text-dark me-2" href="/profile">Profile</a>
      <a class="btn btn-dark btn-sm me-2" href="/logout">Logout</a>
    </div>
    <% } else { %>
    <div class="d-flex">
      <a class="btn btn-outline-dark btn-sm me-2" href="/">Login</a>
      <a class="btn btn-dark btn-sm" href="/signup">Register</a>
    </div>
    <% } %>
  </div>
</nav>